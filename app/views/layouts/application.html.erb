<!DOCTYPE html>
<html>
  <head>
    <title>Mypoll</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!--head begin-->
  <div class="container-fluid js-tm-page-content tm-page-1" data-page-no="1">

	  <div class="cd-bg-video-wrapper" data-video="bgimage.mp4">
		  <!-- video element will be loaded using jQuery -->
	  </div>
	  <div class = "container">
			<div class = "row">
				<div class = "col-sm-2">
					<%= link_to image_tag('logo.jpg'), root_path %>
				</div>
				<div class="col-sm-2 col-sm-offset-8" id="sign_in_and_login">
						<%= link_to 'sign up', new_user_registration_path %>
						or
						<%= link_to 'sing in', new_user_session_path %>
						<%= link_to 'sing out', destroy_user_session_path, method: :delete %>
				</div>
			</div>
		  <hr>
	  </div>

  <!--head end-->
    <%= yield %>
	</div>
  </body>
</html>
