<div class="container">
	<div class="row">
		<% @categories.each do |category| %>
			<div class="col-md-4">
				<%= link_to image_tag("#{category.image}", class: 'img-responsive'),
				            random_question_path(category) %>
			</div>
		<% end %>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-4 col-md-offset-8">
			<small>找不到喜欢的类别？</small>
			<%= link_to :新建一个 , new_category_path, class: 'btn btn-success' %>
			<small>或者</small>
			<%= link_to :提交我的问题 , new_question_path, class: 'btn btn-success' %>
		</div>
	</div>
</div>