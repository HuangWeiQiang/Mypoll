<h1>admin index</h1>
<table class="table table-bordered">
	<tr>
		<th>名称</th>
	</tr>
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td>
				<%= link_to '编辑', edit_category_path(category.id), class: 'btn btn-primary' %>
				<%= link_to '删除', category_path(category.id), method: :delete, class: 'btn btn-danger' %>
			</td>
		</tr>
	<% end %>
</table>