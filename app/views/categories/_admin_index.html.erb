<%= link_to :新建类别, new_category_path, class: 'btn btn-primary' %>
<%= link_to :新建问题, new_question_path, class: 'btn btn-primary' %>
<%= link_to :所有问题, questions_path, class: 'btn btn-primary' %>
<hr>
<h1>Listing Category</h1>
<table class="table table-bordered">
	<tr>
		<th>名称</th>
		<th>操作</th>
	</tr>
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td>
				<%= link_to '编辑', edit_category_path(category.id), class: 'btn btn-primary' %>
				<%= link_to '删除', category_path(category.id), method: :delete, class: 'btn btn-danger' %>
				<%= link_to '类别下的问题', category_questions_path(category.id), class: 'btn btn-danger' %>
			</td>
		</tr>
	<% end %>
</table>
