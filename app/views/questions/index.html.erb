<table class="table">
	<tr>
		<th>问题</th>
		<th>答案1</th>
		<th>答案2</th>
		<th>问题类别</th>
		<th>操作</th>
	</tr>
	<% @questions.each do |question| %>
			<% answers = question.answers %>
		<tr>
			<td><%= question.content %></td>
			<td><%= answers[0].content %></td>
			<td><%= answers[1].content %></td>
			<td><%= question.category.name %></td>
			<td><%= link_to :删除, question_path(question), method: :delete, class: 'btn btn-danger' %></td>
		</tr>
	<% end %>
</table>
