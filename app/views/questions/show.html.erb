<div class="container">
	<div class="row">
		<div class="col-md-2 col-md-offset-5">
			<h1><%= @question.content %></h1>
		</div>

	</div>
	<div class="row" style="position: relative" id="poll_block">
		<% @answers.each do |answer| %>
				<div class="col-xs-6" >
					<%= link_to image_tag("questions/#{answer.image}", id: "imag-answer", class: "img-thumbnail"),
					            question_answer_path(question_id: params[:id], l_or_r: answer.id),
					            remote:true %>
				</div>
		<% end %>
		<%= image_tag "or.png", id: "imag-or", class: "img-circle" %>
	</div>
	<hr>
	<!--空的div用来显示answer-->
	<div class="row" id="answer_block"></div>
	<hr>
	<div class="row">
		<div class="col-md-4 col-md-offset-8">
			<%= link_to :提交我的问题 , new_question_path, class: 'btn btn-success' %>
		</div>
	</div>
</div>