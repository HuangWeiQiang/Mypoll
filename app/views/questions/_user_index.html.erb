<div class="container">
	<div class="row">
		<% @categories.each do |category| %>
			<div class="col-md-4">
				<%= link_to image_tag("categories/#{category.image}",
				                      class: 'img-responsive'), category_question_path %>
			</div>
		<% end %>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-4 col-md-offset-8">
			<small>找不到喜欢的类别？</small>
			<%= link_to :新建一个 , new_category_path, class: 'btn btn-success' %>
		</div>
	</div>
</div>