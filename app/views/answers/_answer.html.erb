<div class="row" id="answer_block">
	<div class="container">
		<div class="row">
			<div class="col-sm-8">
				<div class="row">
					<div class="col-sm-8"><h3>留言板</h3></div>
					<div class="clo-sm-4">
						<!--"Like It : <strong>#{@question.star}</strong>"-->
						<%= link_to "Like it #{@question.star}", question_star_path(@question.id),
						            class: "btn btn-default", id: "star_count", remote:true %>
					</div>
				</div>
				<table class="table">
					<% @comments.each do |comment| %>
						<tr>
							<td><%= comment.content %></td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>
		<hr>
		<hr>
		<div class="row">
			<div class="navbar navbar-inverse navbar-fixed-bottom">
				<div class="navbar-inner">
					<div class="container">
						<div class="row">
							<div class="col-xs-8">
								<%= form_for @comment, url: comment_path, method: :post, remote: true do |f| %>
										<%= f.hidden_field :answer_id, value: "#{@answer.id}" %>
										<!--TODO user_id-->
										<%= f.hidden_field :user_id, value: 1 %>
										<%= f.text_area :content, class: "form-control" %>
										<%= f.submit :提交评论, class: "btn btn-success" %>
								<% end %>
							</div>
							<div class="col-sm-4">
								<%= link_to :next, question_next_path(@question.id), class: "btn btn-success" %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>